{
    "private": true,
    "scripts": {
        "prepare": "cd ../ && husky install",
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint --fix .",
        "format": "prettier 'resources/{js,vue}/**/*.{js,vue}' --write",
        "pre-commit": "npm run format && lint-staged && pretty-quick --staged",
        "fix:eslint": "eslint --ext .js,.vue resources/js/ --fix",
        "fix:prettier": "prettier --write --loglevel warn 'resources/js/**/*.vue'",
        "fix-code-style": "npm run fix:prettier && npm run fix:eslint"
    },
    "devDependencies": {
        "@inertiajs/vue3": "^1.0.0",
        "@mdi/js": "^7.2.96",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/line-clamp": "^0.4.4",
        "@tailwindcss/typography": "^0.5.2",
        "@vitejs/plugin-vue": "^4.0.0",
        "autoprefixer": "^10.4.7",
        "axios": "^1.6.0",
        "chart.js": "^4.3.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.14.1",
        "husky": "^8.0.3",
        "laravel-vite-plugin": "^0.7.2",
        "lint-staged": "^13.2.2",
        "numeral": "^2.0.6",
        "pinia": "^2.1.3",
        "postcss": "^8.4.14",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "tailwindcss": "^3.1.0",
        "vite": "^4.1.5",
        "vue": "^3.2.31"
    },
    "dependencies": {
        "dayjs": "^1.11.7",
        "flowbite": "^1.6.5",
        "flowbite-vue": "^0.0.10",
        "lodash": "^4.17.21",
        "vue-material-design-icons": "^5.2.0",
        "vue-recaptcha-v3": "^2.0.1"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix"
    }
}
